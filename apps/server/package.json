{
  "name": "@repo/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "schema": "./src/db/schema.ts"
    }
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --format=esm --sourcemap --target=node --external:@aws-sdk/* --external:pg --external:better-sqlite3 --external:stripe --external:drizzle-orm",
    "start": "bun dist/index.js",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:admin": "bun src/db/admin/cli.ts",
    "auth:generate": "pnpx @better-auth/cli generate",
    "auth:migrate": "pnpx @better-auth/cli migrate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@hono/node-server": "^1.18.2",
    "@hono/zod-validator": "^0.7.2",
    "@types/pg": "^8.15.5",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.9.1",
    "hono-rate-limiter": "^0.4.2",
    "pg": "^8.16.3",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/node": "^20.19.10",
    "drizzle-kit": "^0.24.2",
    "tsx": "^4.20.4",
    "zod": "^4.0.17"
  }
}